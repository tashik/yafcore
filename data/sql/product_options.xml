<?xml version="1.0" encoding="UTF-8"?>
<table name="product_options">
  <comment>Список опций для товара</comment>
  <columns>
    <column name="id">
      <type>serial</type>
      <constraint>not-null primary</constraint>
    </column>
    <column name="option_group_id">
      <comment>ID группы опции из product_option_group.id</comment>
      <type>integer</type>
    </column>
    <column name="name">
      <comment>Наименование опции</comment>
      <type length="99">varchar</type>
    </column>
  </columns>
</table>
