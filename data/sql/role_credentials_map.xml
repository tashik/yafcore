<?xml version="1.0" encoding="UTF-8"?>
<table name="role_credentials_map">
  <comment>Соответствие между полномочиями и ролями</comment>
  <columns>
    <column name="id">
      <type>serial</type>
      <constraint>not-null primary</constraint>
    </column>
    <column name="role_id">
      <comment>ID роли из roles.id</comment>
      <type>integer</type>
    </column>
    <column name="credential_id">
      <comment>ID полномочия из credentials.id</comment>
      <type>integer</type>
    </column>
  </columns>
</table>
