<?xml version="1.0" encoding="UTF-8"?>
<table name="list_gics_root">
  <comment>Отрасли ОКВЭД</comment>
  <columns>
    <column name="id">
      <comment>pk</comment>
      <type>integer</type>
      <constraint>not-null primary</constraint>
    </column>
    <column name="code">
      <comment>Код</comment>
      <type length="16">varchar</type>
      <constraint>not-null</constraint>
    </column>
    <column name="name">
      <comment>Наименование</comment>
      <type length="512">varchar</type>
      <constraint>not-null</constraint>
    </column>
    <column name="services_count">
      <comment>Количество поставщиков по данной отрасли</comment>
      <type>integer</type>
      <default>0</default>
      <constraint>not-null</constraint>
    </column>
  </columns>
</table>
