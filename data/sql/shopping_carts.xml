<?xml version="1.0" encoding="UTF-8"?>
<table name="shopping_carts">
  <comment>Список покупок организаций</comment>
  <columns>
    <column name="id">
      <type>serial</type>
      <constraint>not-null primary</constraint>
    </column>
    <column name="business_id">
      <type>integer</type>
    </column>
    <column name="user_id">
      <type>integer</type>
    </column>
    <column name="is_business_wide">
      <type>boolean</type>
      <default>false</default>
      <constraint>not-null</constraint>
    </column>
    <column name="title">
      <type length="99">varchar</type>
    </column>
    <column name="date_added">
      <type>timestamp</type>
    </column>
  </columns>
</table>
